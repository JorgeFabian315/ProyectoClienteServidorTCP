<Window x:Class="ServidorTCP.Views.PrincipalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:ServidorTCP.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServidorTCP.Views"
        mc:Ignorable="d"
        Title="PrincipalView"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Width="1250"
        Background="#F7F7F7">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily"
                    Value="/Assets/#Poppins" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition Height=".9*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*" />
            <ColumnDefinition Width=".65*" />
            <ColumnDefinition Width=".15*" />
        </Grid.ColumnDefinitions>
        <!--#REGION PRIMERA FILA-->
        <Grid Grid.ColumnSpan="3"
              Margin="15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*" />
                <ColumnDefinition Width=".3*" />
                <ColumnDefinition Width=".4*" />
            </Grid.ColumnDefinitions>
            <WrapPanel VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="Instagram"
                                         Width="40"
                                         Foreground="{StaticResource Degradado}"
                                         Height="40" />
                <TextBlock Text="Instagram"
                           FontSize="25"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center" />
            </WrapPanel>
            <WrapPanel Grid.Column="2"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center">
                <WrapPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background"
                                Value="{StaticResource Degradado}" />
                        <Setter Property="Foreground"
                                Value="White" />
                        <Setter Property="Padding"
                                Value="15,10" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="8">
                                        <ContentPresenter />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </WrapPanel.Resources>
                <Button Margin="10,0">Iniciar</Button>
                <Button>Detener</Button>
            </WrapPanel>
        </Grid>
        <!--#ENDREGION PRIMERA FILA-->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Usuarios" 
                       FontSize="30"
                       Margin="10,0,0,0"/>
            <ListBox 
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".5*" />
                    <ColumnDefinition Width=".5*" />
                </Grid.ColumnDefinitions>
                <Border CornerRadius="80"
                        Height="65"
                        Width="65"
                        BorderBrush="{StaticResource Degradado}"
                        BorderThickness="2"
                        Background="Transparent"></Border>
                <Border CornerRadius="80"
                        Height="55"
                        Width="55">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/foto1.jpg" />
                    </Border.Background>
                </Border>
                <TextBlock Text="Fabian"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="20" />
            </Grid>
        </ListBox>
        </StackPanel>
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".8*" />
                <RowDefinition Height=".2*" />
            </Grid.RowDefinitions>
            <Image Source="/Assets/imagen.png"
                   Stretch="UniformToFill" />
            <Grid Grid.Row="1"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".2*" />
                    <ColumnDefinition Width=".4*" />
                    <ColumnDefinition Width=".3*" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Border CornerRadius="80"
                            Height="55"
                            Width="55"
                            BorderBrush="{StaticResource Degradado}"
                            BorderThickness="2"
                            Background="Transparent"></Border>
                    <Border CornerRadius="80"
                            Height="45"
                            Width="45">
                        <Border.Background>
                            <ImageBrush ImageSource="/Assets/foto1.jpg" />
                        </Border.Background>
                    </Border>
                </Grid>
                <TextBlock Text="Fabian"
                           Grid.Column="1"
                           TextWrapping="Wrap"
                           Foreground="Black"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="15" />
                <TextBlock Text="6/3/2024"
                           Grid.Column="2"
                           Foreground="Black"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,0"
                           FontSize="11" />
            </Grid>
    </Grid>
        <!--#REGION TERCERA FILA-->
        <ListBox ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 Grid.Column="2"
                 Grid.Row="1"
                 Grid.RowSpan="2"
                 VerticalAlignment="Top">
            <Grid>
                <Image Source="/Assets/imagen.png"
                       Stretch="UniformToFill"
                       Height="100" />
            </Grid>
            <Grid>
                <Image Source="/Assets/imagen.png"
                       Stretch="UniformToFill"
                       Height="100" />
            </Grid>
            <Grid>
                <Image Source="/Assets/imagen.png"
                       Stretch="UniformToFill"
                       Height="100" />
            </Grid>
        </ListBox>
        <!--#ENDREGION TERCERA FILA-->
    </Grid>
</Window>
